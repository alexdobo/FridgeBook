//========================================
//days(full)
//day= current quantity/V milk avg

int daysLast (int currentMilk, int avgConsumption){
  int days = (int) currentMilk/avgConsumption; //or round()?
  return days;
}

//========================================
int needMilkOrNot (int warningVol, int currentVol){
  if(warningVol > currentVol){
    return 1;
  }else{
    return 0;
  }
}

